{
  "include": [
    "@types",
    "packages/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "esnext",
      "dom.iterable"
    ],
    "noEmit": true,
    "module": "esnext",
    "target": "es5",
    "baseUrl": ".",
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
  }
}
